<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to SPMS</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <%- contentFor('style') %>
    <style>
        .hero-section {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 100px 0;
        }
        .feature-card {
            transition: transform 0.3s ease;
        }
        .feature-card:hover {
            transform: translateY(-10px);
        }
        .feature-icon {
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            border: none;
            border-radius: 15px;
        }
        .features-section {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <%- contentFor('body') %>
    <!-- Hero Section -->
    <div class="hero-section text-center py-5">
        <div class="container">
            <h1 class="display-4 mb-4">Student Project Management System</h1>
            <p class="lead mb-5">A comprehensive platform for managing student projects, facilitating collaboration between students, faculty, and supervisors.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/auth/login" class="btn btn-primary btn-lg">Login</a>
                <a href="/auth/register" class="btn btn-outline-primary btn-lg">Register</a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-section py-5">
        <div class="container">
            <h2 class="text-center mb-5">Key Features</h2>
            <div class="row g-4">
                <!-- Student Features -->
                <div class="col-md-4">
                    <div class="feature-card h-100">
                        <div class="card shadow">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-user-graduate fa-3x text-primary"></i>
                                </div>
                                <h3 class="card-title h4">For Students</h3>
                                <ul class="list-unstyled text-start">
                                    <li><i class="fas fa-check text-success me-2"></i>Upload project files</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Receive feedback</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Track progress</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Collaborate with team</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Faculty Features -->
                <div class="col-md-4">
                    <div class="feature-card h-100">
                        <div class="card shadow">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-chalkboard-teacher fa-3x text-primary"></i>
                                </div>
                                <h3 class="card-title h4">For Faculty</h3>
                                <ul class="list-unstyled text-start">
                                    <li><i class="fas fa-check text-success me-2"></i>Review projects</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Provide feedback</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Track student progress</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Manage batches</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Supervisor Features -->
                <div class="col-md-4">
                    <div class="feature-card h-100">
                        <div class="card shadow">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-user-tie fa-3x text-primary"></i>
                                </div>
                                <h3 class="card-title h4">For Supervisors</h3>
                                <ul class="list-unstyled text-start">
                                    <li><i class="fas fa-check text-success me-2"></i>Overview all projects</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Monitor progress</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Generate reports</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Manage faculty</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0">&copy; 2024 Student Project Management System. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 