<div class="container mt-5">
    <h2 class="text-center mb-4">Choose Your Role</h2>
    <div class="row justify-content-center">
        <!-- Student Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-graduate fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Student</h5>
                    <p class="card-text">Register as a student to submit projects, view feedback, and track your progress.</p>
                    <a href="/auth/register/student" class="btn btn-primary">Register as Student</a>
                </div>
            </div>
        </div>

        <!-- Faculty Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chalkboard-teacher fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Faculty</h5>
                    <p class="card-text">Register as faculty to review student projects and provide feedback.</p>
                    <a href="/auth/register/faculty" class="btn btn-success">Register as Faculty</a>
                </div>
            </div>
        </div>

        <!-- Supervisor Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-tie fa-3x mb-3 text-danger"></i>
                    <h5 class="card-title">Supervisor</h5>
                    <p class="card-text">Register as a supervisor to manage batches and oversee project progress.</p>
                    <a href="/auth/register/supervisor" class="btn btn-danger">Register as Supervisor</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <p>Already have an account? <a href="/auth/login">Login here</a></p>
    </div>
</div> 